@model IEnumerable<Todo.Models.Task>

@{
    ViewBag.Title = "Todos";
}

<h1>Todo List</h1>
<table class="table">
    <tr>
        <th></th>
        <th>Task</th>
        <th>Date</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <form asp-controller="Tasks" asp-action="UpdateStatus" method="post" role="form">
                    <input type="checkbox" value="true" name="Completed" @(item.IsFinished ? "checked" : string.Empty) />
                    <input name="Id" value="@item.Id" type="hidden" />
                    <input type="submit" value="Update" class="btn btn-sm" />
                </form>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDate)
            </td>
            <td>
                <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                |
                <a asp-controller="Tasks" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>

